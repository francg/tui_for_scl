@article{perez-sanagustin_multichannel_2013,
  title = {Multi-channel, multi-objective, multi-context services: {{The}} glue of the smart cities learning ecosystem},
  abstract = {Smart devices in combination with other digital tools have occupied
the cities transforming citizens' urban experience. People are connected any
time and anywhere with their global identities changing their relation to the
local. People live in glocalities, where the local and the global co-exists.
Glocalities are unique and constantly changing in a lifelong-learning process in
